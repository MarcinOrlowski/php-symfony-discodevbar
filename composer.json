{
  "name": "marcin-orlowski/symfony-discodevbar",
  "description": "Development toolbar/banner for Symfony project",
  "type": "symfony-bundle",
  "version": "1.6.0",
  "license": "MIT",
  "keywords": [
    "symfony",
    "devbar",
    "debug",
    "toolbar",
    "worktree",
    "development"
  ],
  "authors": [
    {
      "name": "Marcin Orlowski",
      "email": "mail@marcinOrlowski.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.1",
    "symfony/dependency-injection": "^6.4|^7.0",
    "symfony/http-kernel": "^6.4|^7.0",
    "symfony/yaml": "^6.4|^7.0",
    "symfony/twig-bundle": "^6.4|^7.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.0",
    "phpstan/phpstan-symfony": "^2.0",
    "phpunit/phpunit": "^10.5",
    "squizlabs/php_codesniffer": "^3.13"
  },
  "autoload": {
    "psr-4": {
      "MarcinOrlowski\\DiscoDevBar\\": "src/"
    }
  },
  "scripts": {
    "auto-scripts": {
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ],
    "lint": [
      "Composer\\Config::disableProcessTimeout",
      "@composer lint:phpstan",
      "@composer lint:phpcs"
    ],
    "lint:phpcs": [
      "Composer\\Config::disableProcessTimeout",
      "@php vendor/bin/phpcs --warning-severity=6"
    ],
    "lint:phpstan": [
      "Composer\\Config::disableProcessTimeout",
      "vendor/bin/phpstan analyse --no-progress --no-interaction -c phpstan.neon"
    ],
    "mdlint": [
      "@composer lint:md"
    ],
    "lint:md": [
      "Composer\\Config::disableProcessTimeout",
      "markdownlint --config .markdownlint.yaml --ignore vendor --ignore node_modules **/*.md"
    ],
    "test": [
      "@composer test:unit"
    ],
    "test:unit": [
      "Composer\\Config::disableProcessTimeout",
      "@php vendor/bin/phpunit --group unit --display-warnings --display-deprecations --display-notices --display-errors --display-phpunit-deprecations"
    ]
  }
}
